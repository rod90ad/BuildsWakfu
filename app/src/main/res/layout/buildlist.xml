<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_builds">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_rl_head"
                        android:background="@color/colorPrimaryDark"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cra_head"
                            android:id="@+id/view_head"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"/>

                        <CheckBox
                            android:id="@+id/build_check"
                            android:buttonTint="@color/colorPrimaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/view_nivel"
                            android:text="Nv. 180"
                            android:textColor="@color/nivel"
                            android:textSize="15dp"
                            android:layout_toLeftOf="@+id/build_check"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/view_nome"
                            android:text="Blooddrunk"
                            android:textSize="18dp"
                            android:layout_toLeftOf="@+id/view_nivel"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/blank"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view_head"
                            android:background="@drawable/end_bg"/>

                    </RelativeLayout>

                </RelativeLayout>

            </ScrollView>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>