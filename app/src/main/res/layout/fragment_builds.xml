<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_builds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.buildswakfu.rodrigo.buildswakfu.Layouts.BuildsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/builds_llChanger"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.99">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_Builds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_margin="3dp"
                android:weightSum="1"
                android:background="@drawable/circle"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_add_white_18dp"/>

                <TextView
                    android:id="@+id/build_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/menu3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_margin="3dp"
                android:background="@drawable/circle"
                android:weightSum="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_share_white_48dp"/>

                <TextView
                    android:id="@+id/build_import"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/menu4"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
